@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/images/logo-AdministrationBD.png">
    <title>@ViewData["Title"] - Massages Web</title>
    <link href="~/assets/lib/morrisjs/morris.css" rel="stylesheet">
    <link href="~/assets/lib/toast-master/css/jquery.toast.css" rel="stylesheet">
    <link href="~/assets/css/style.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/datatables.net-bs4/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/assets/lib/datatables.net-bs4/css/responsive.dataTables.min.css">

    @RenderSection("CSS", required: false)
</head>

<body class="skin-gray fixed-layout">
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">

        @{
            await Html.RenderPartialAsync("_Header");
        }
        @{
            await Html.RenderPartialAsync("_Sidebar");
        }

        <div class="page-wrapper">

            <div class="container-fluid">
                @RenderSection("SubHeader", required: false)
                
                @RenderBody()

                @{
                    await Html.RenderPartialAsync("_RightSidebar");
                }
            </div>
        </div>
        @{
            await Html.RenderPartialAsync("_Footer");
        }
    </div>

    <script src="~/assets/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/sidebarmenu.js"></script>
    <script src="~/assets/js/custom.min.js"></script>
    <script src="~/assets/lib/raphael/raphael-min.js"></script>
    <script src="~/assets/lib/morrisjs/morris.min.js"></script>
    <script src="~/assets/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>

    <script src="~/assets/lib/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="~/assets/lib/toast-master/js/jquery.toast.js"></script>
    <script src="~/assets/lib/toast-master/js/jquery.toast.js"></script>
    <script src="~/assets/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/lib/datatables.net-bs4/js/dataTables.responsive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/additional-methods.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $('body').on('click', '.clickable-row', function () {
            location.href = $(this).attr('data-href');
        });
    </script>

</body>
</html>