@model AdministrationDataBaseData.Models.Session

@{
    ViewData["Title"] = "Edit Session";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Subheader
{
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h4 class="text-themecolor fw-bold" style="color: #777777;">@AdministrationDataBase.Resources.Resource.EditSession</h4>
        </div>
        <div class="col-md-7 align-self-center text-end">
            <div class="d-flex justify-content-end align-items-center">
                <ol class="breadcrumb justify-content-end">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "PilatesCustomer")">@AdministrationDataBase.Resources.Resource.Start</a></li>
                    <li class="breadcrumb-item active">@AdministrationDataBase.Resources.Resource.EditSession</li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="card">
    <div class="card-body">
        <form asp-action="EditSession" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group mb-3" ">
                        <label asp-for="onclose" class="fw-bold">Date and Time of the Session</label>
                        <input type="datetime-local" name="sessionDate" class="form-control" value="@Model.SessionDate.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>
                    <div class="form-group mb-3" ">
                        <label asp-for="SessionObservations" class="fw-bold">Sessions Observations</label>
                        <textarea asp-for="SessionObservations" name="SessionObservations" id="SessionObservations" class="form-control" rows="5">@Model.SessionObservations</textarea>
                        <span asp-validation-for="SessionObservations" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3" ">
                        <button type="submit" class="btn btn-primary">@AdministrationDataBase.Resources.Resource.Save</button>
                        <a href="@Url.Action("DetailsPilatesCustomer", "PilatesCustomer", new { id = Model.PilatesCustomerId })" class="btn btn-info">@AdministrationDataBase.Resources.Resource.Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("form").validate({
                rules: {
                    SessionObservations: {
                        required: true
                    }
                },
                messages: {
                    SessionObservations: {
                        required: "The Session Observations field is requiredo"
                    }
                },
                errorElement: "div",
                errorClass: "text-danger",
                highlight: function (element) {
                    $(element).addClass("is-invalid");
                },
                unhighlight: function (element) {
                    $(element).removeClass("is-invalid");
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element);
                }
            });
        });
    </script>
}

